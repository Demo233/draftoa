<#import "../../macro/macrocommon.htm" as common>
<@common.header/>
<@common.editheader name="网站导航菜单"/>
<form id="formId" method="post" action="?action=update" >
<input type="hidden" name=id value="${obj.id?default('')}" /><input type="hidden" name=page value="${page?c}"  /><table cellSpacing=1 cellPadding=2 width="96%" align=center bgColor=#cccccc border=0 class="tab">
<tr>
<td colspan=4 bgColor=#f8f8f8 height=30 align="center">
编辑网站导航菜单</td>
</tr>
<tr>
<td class="titleTd">菜单名称</td>
<td class="contentTd"><input type="text" class="txtinput" name="tname" value="${obj.tname?default('')}" /></td>
<td class="titleTd">排序号</td>
<td class="contentTd"><input type="text" class="txtinput" name="sortCode" value="${obj.sortCode?c}" /></td>
</tr>
<tr>
<td class="titleTd">上级菜单</td>
<td class="contentTd"><select  name="parentId" /><@common.treeoptions list=parentlist defaultValue="${obj.parentId?default('')}" display="true"/></select></td>
<td class="titleTd">来源栏目</td>
<td class="contentTd"><select name="columnid" onchange="changcolumn(this)" /><@common.treeoptions list=columnlist/></select></td>
</tr>
<tr>
<td class="titleTd">菜单连接地址</td>
<td bgColor=#ffffff colspan="3"><input type="text" class="txtinput" id="menuurl" name="menuurl" value="${obj.menuurl?default('')}" size=80 /></td>
</tr>
<tr>
<td colspan=4 bgColor=#f8f8f8 height=30 align="center">
<input type="button" class="buttons" value="更新" onclick="save()" />&nbsp;&nbsp;&nbsp;&nbsp;<input type="button" class="buttons" value="关闭" onclick="javascript:history.go(-1);" />
</td>
</tr>
</table>
</form>
<@common.bottom/>
<script type="text/javascript">
<!--
function changcolumn(obj){
	var index=obj.selectedIndex;
	var columnid=obj.value;
	var menuurl=document.getElementById("menuurl");
	menuurl.value="columnlist.jsp?id="+columnid;
}
//-->
</script>


