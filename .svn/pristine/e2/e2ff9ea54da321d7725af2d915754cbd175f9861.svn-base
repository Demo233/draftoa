<#macro mySwitch str="">
 <#if str??>
	<#switch str>
	<#case "0">
	附议中
	<#break>
	<#case "1">
	允许上报
	<#break>
	<#case "2">
	签批中
	<#break>
	<#case "3">
	承办中
	<#break>
	<#case "4">
	承办回复中
	<#break>
	<#case "5">
	立案中
	<#break>
	<#case "6">
	立案回复中
	<#break>
	<#case "7">
	通过
	<#break>
	<#case "8">
	未通过
	<#break>
	<#default>
	审议中
	</#switch>
	<#else>
</#if>
</#macro>




