<#import "../../macro/macrocommon.htm" as common>
<@common.header/>
<@common.addheader name="权限"/>
<form id="formId" method="post" action="?action=save" >
<input type=hidden name="resultvalue" value=""> 
<input type=hidden name="menuId" value="${menuId?default('')}">
<table cellSpacing=1 cellPadding=2 width="96%" align=center
	bgColor=#cccccc border=0 class="tab">
	<thead>
	<tr>
		<td colspan=3 bgColor=#f8f8f8 height=30 align="center">权限设置</td>
	</tr>
	</thead>
<tbody>
	<tr>
		<td width=210 bgColor=#f8f8f8 height=20 style="padding-left: 10px">未分配给该菜单的角色</td>
		<td bgColor=#ffffff width="10" align="center" rowspan="2"><input
			type="button" name="tname" id="add" alt="添加" value=">"
			onClick="myadd(formId.select1,formId.select2,'add','del');return false;" /><br>
		<br>
		<input type="button" name="tname" id="del" alt="删除" value="<"
		onClick="mydel(formId.select2,formId.select1,'del','add');return
		false;"/><br>
		<br>
		</td>
		<td width=210 bgColor=#f8f8f8 style="padding-left: 10px">已经选择分配给该菜单的角色</td>
	</tr>
	<tr>
		<td width=210 bgColor=#f8f8f8 height=300 style="padding-left: 10px">
		<select name="select1" size="20" multiple
			onChange="clearSelected(formId.select2);buttonChanged('del','add');"
			ondblclick="myadd(formId.select1,formId.select2,'add','del');return false;"
			style="width: 200">
			<#list rolelist as obj>
			<option value="${obj.id}">${obj.tname?default('')}</option>
			</#list>
		</select></td>
		<td width=210 bgColor=#f8f8f8 style="padding-left: 10px">
		<select	name="select2" size="20" multiple
			onChange="clearSelected(formId.select1);buttonChanged('add','del');"
			ondblclick="mydel(formId.select2,formId.select1,'del','add');return false;"
			style="width: 200">
			<#list selectList as obj>
			<option value="${obj.role.id}">${obj.role.tname?default('')}</option>
			</#list>
		</select></td>
	</tr>
	<tr>
		<td colspan=3 bgColor=#f8f8f8 height=30 align="center"><input
			type="button" class="buttons" value="保存" onclick="save()" />&nbsp;&nbsp;&nbsp;&nbsp;<input
			type="button" class="buttons" value="关闭"
			onclick="javascript:history.go(-1);" /></td>
	</tr>
	</tbody>
</table>
</form>
<@common.bottom/>
<script type="text/javascript" src="javascript/selectmove.js"></script>

