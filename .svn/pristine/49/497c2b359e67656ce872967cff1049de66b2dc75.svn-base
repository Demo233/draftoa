<#import "../../macro/macrocommon.htm" as common>
<@common.header/>
<@common.addheader name="${columns.tname?default('信息')}"/>
<form id="formId" method="post" action="?action=saveform">
<input type="hidden" name="columnId" value="${columns.id}"/>
<input type="hidden" name="valid" id="valid" value="true"/>
<input type="hidden" id="auditState" name="auditState" value="false"/>
<table cellSpacing=1 cellPadding=2 width="96%" align=center bgColor=#cccccc border=0 class="tab">
<thead><tr><td colspan=2 bgColor=#f8f8f8 height=30 align="center">新建${columns.tname?default('信息')}</td></tr>
</thead><tbody>
<tr>
<td class="titleTd" >文章标题</td>
<td bgColor=#ffffff><input type="text" class="btinputwidth" class="btinputwidth" id="tname" name="tname" size="40"/></td>
</tr>
<tr>
<td class="titleTd">标题图片</td>
<td class="contentTd"><input type="text" class="txtinputwidth" id="imgUrl" name="imgUrl"/>&nbsp;&nbsp;<a href="#" onclick="openfileuplodpage('image','imgUrl')"><font color="red">上传文件</font></a></td>
</tr>
<tr>
<td class="titleTd">信息来源</td>
<td class="contentTd"><input type="text" class="txtinputwidth" id="inforsource" name="inforsource" size="40"/></td>
</tr>
<tr>
<td class="titleTd">摘要</td>
<td bgColor=#ffffff><textarea name="summary" cols="60" ></textarea></td>
</tr>
<tr>
<td colspan=2 bgColor=#f8f8f8 height=300 align="center"  valign="top" cellSpacing=0 cellPadding=0 style="padding: 0px">
<textarea id="articleContent" name="articleContent"  rows="20" cols="80" style="width: 800px;"></textarea>
</td>
</tr>
</table>
<table cellSpacing=1 cellPadding=2 width="96%" align=center bgColor=#cccccc border=0 class="tab">
<tr>
<td colspan=4 bgColor=#f8f8f8 height=30 align="center">
<input type="button" class="buttons" value="保存草稿" onclick="savestatecaogao()" />
<#if columns.auditState>
&nbsp;&nbsp;&nbsp;&nbsp;<input type="button" class="buttons" value="送审批" onclick="savestate('false')" />
<#else>
&nbsp;&nbsp;&nbsp;&nbsp;<input type="button" class="buttons" value="发布" onclick="savestate('true')" />
</#if>
&nbsp;&nbsp;&nbsp;&nbsp;<input type="button" class="buttons" value="关闭" onclick="javascript:history.go(-1);" />
</td>
</tr>
</tbody>
</table>
</form>
<@common.bottom/>
<script type="text/javascript">
UE.getEditor('articleContent');
function savestate(obj){
	document.getElementById("auditState").value=obj;
	if(obj){
		document.getElementById("valid").value=obj;
		}
	save();
  }
function savestatecaogao(){
	document.getElementById("valid").value=false;
	save();
}
</script>


