<#import "../../macro/macrocommon.htm" as common>
<#import "../../macro/paginationCommon.htm" as pagination>
<@common.header/>
<div class="current">
<span class="place">首页> >菜单列表 </span>
	<ul>
		<li><input type="button" id="buttondelete" class="buttons" value="删除" onclick="deletes()" /></li>	
		<li><input type="button" id="buttonforbidden" class="buttons" value="禁用" onclick="jsdeletes()" /></li>	
		<li><input type="button" id="buttonadd" class="buttons" value="增加" onclick="addInfor()" /></li>
	</ul>
</div>
<table cellSpacing=1 cellPadding=2 width="100%" align=center bgColor=#cccccc border=0 class="tab">
<thead>
<tr>
<td width=20 ><input type="checkbox" name="allbox" value="checkbox"	onClick="selectAll(this.checked)" /></td>
<td>名称</td>
<td>链接地址</td>
<td>显示目标</td>
<td>下级菜单</td>
<td>状态</td>
</tr>
</thead>
<tbody>
<#list list as obj>
<tr>
<td width=20 ><input type="checkbox" name="box" value="${obj.id?default('')}"/></td>
<td align="center"><a href="#" onclick="readInfor('${obj.id?default('')}')">${obj.tname?default('')}</a></td>
<td align="center">${obj.url?default('')}</td>
<td align="center">${obj.targets?default('')}</td>
<td align="center"><a href="?parentId=${obj.id?default('')}">下级菜单</a></td>
<td align="center"><a href='javascript:void(0)' id="${obj.id?default('')}" onClick="updateBaseObject(this,${obj.valid?string('false','true')})" name=valid > ${obj.valid?string('启用','禁用')}</a></td>
</tr>
</#list>
</tbody>
</table>
<form id="commonform" action="?action=list" method="post">
<input type='hidden' id='page' name="page" value='${page.pageIndex?c}' />
<input type='hidden' id='parentId' name="parentId" value='${parentid?default('')}' />
</form>
<table width="100%" border="0" cellpadding="0" cellspacing="0" class="tab"><tfoot>
<tr>
<td height="22" align="right" bgcolor="#ebeaf4"><@pagination.pagination page=page params=""/>&nbsp;</td>
</tr></tfoot>
</table>
<script type="text/javascript">
<!--
initSort();
//-->
</script>
<@common.bottom/>

