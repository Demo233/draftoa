<#import "../../macro/macrocommon.htm" as common>
<@common.header/>
<div class="current">
 <span class="place">首页> >栏目静态化 </span>
</div>
<hr>
<table cellSpacing=1 cellPadding=2 width="96%" align=center bgColor=#cccccc border=0 class="tab">
<tr>
<td class="titleTd">栏目</td>
<td class="contentTd"><select id="columnId" name="columnId"/><@common.options list=columnlist/></select></td>
<td class="titleTd">开始日期</td>
<td class="contentTd"><input type="text" name="beginday" id="calendar"  class="calendars"/></td>
</tr>
<tr>
<td bgColor=#ffffff height=30 align="center" colspan="4">
<input type="button" class="buttons" value="静态化栏目" onclick="staticizecontent()" />
</td>
</tr>
</table>
<script type="text/javascript">
function staticizecontent(){
	var columnId=document.getElementById("columnId").value;
	var calendar=document.getElementById("calendar").value;
	$.ajax({
		type : "post",
		data : {columnId:columnId,beginday:calendar},
		url : "?action=staticizecontents",
		timeout : 10000,
		success : function(msg) {
			alert(msg.resultDesc);
		}
	});
}
</script>
<@common.bottom/>


