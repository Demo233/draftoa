	if(columnid==""){
		name.value="";
		menuurl.value="";
	}else{
		name.value=columnname.replace(/(^\s*)|(\s*$)/g,""); ;
		menuurl.value="columnlist.jsp?id="+columnid;
		}
}
//-->
</script>

