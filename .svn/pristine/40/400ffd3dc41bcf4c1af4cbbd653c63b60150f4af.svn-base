<#import "../../macro/macrocommon.htm" as common>
<@common.header/>
<@common.addheader name="网站导航菜单"/>
<form id="formId" method="post" action="?action=save" >
<table cellSpacing=1 cellPadding=2 width="96%" align=center bgColor=#cccccc border=0 class="tab">
<tr>
<td colspan=4 bgColor=#f8f8f8 height=30 align="center">
新建网站导航菜单</td>
</tr>
<tr>
<td class="titleTd">菜单名称</td>
<td class="contentTd"><input type="text" class="txtinput" id="tname" name="tname"/></td>
<td class="titleTd">来源栏目</td>
<td class="contentTd"><select name="columnid" onchange="changcolumn(this)" /><option value="">选择栏目</option><@common.treeoptions list=columnlist/></select></td>
</tr>
<tr>
<td class="titleTd">上级菜单</td>
<td class="contentTd"><select  name="parentId" /><@common.treeoptions list=parentlist display="true"/></select></td>
<td class="titleTd">菜单连接地址</td>
<td class="contentTd"><input type="text" class="txtinput" id="menuurl" name="menuurl" size="50"/></td>
</tr>
<tr>
<td colspan=4 bgColor=#f8f8f8 height=30 align="center">
<input type="button" class="buttons" value="保存" onclick="save()" />&nbsp;&nbsp;&nbsp;&nbsp;<input type="button" class="buttons" value="关闭" onclick="javascript:history.go(-1);" />
</td>
</tr>
</table>
</form>
<@common.bottom/>
<script type="text/javascript">
<!--
